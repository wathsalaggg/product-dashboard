            <div class="col-md-4">
                <select class="form-select border-0" id="categoryFilter" style="background-color: #ECF0F1;">
                    <option value="">All Categories</option>
                    <!-- Dynamically generate categories from your ViewModel -->
                    @if (Model?.Categories != null)
                    {
                        foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id" selected="@(Model.CategoryId == category.Id?.ToString())">
                                @category.Name
                            </option>
                        }
                    }
                </select>
