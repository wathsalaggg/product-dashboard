@model ProductDashboard.Models.Product

<div class="col-lg-4 col-md-6 col-sm-12 mb-4">
    <div class="card product-card h-100">
        <div class="card-img-container">
            <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/placeholder.jpg" : Model.ImageUrl)"
                 class="card-img-top" alt="@Model.Name" loading="lazy">
            @if (!Model.InStock)
            {
                <div class="out-of-stock-overlay">
                    <span class="badge bg-danger">Out of Stock</span>
                </div>
            }
        </div>
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">@Model.Name</h5>
            <p class="card-text flex-grow-1">@Model.Description</p>
            <div class="product-meta">
                <span class="badge bg-secondary mb-2">@Model.Category?.Name</span>
                <div class="price-tag">
                    <span class="h4 text-primary mb-0">$@Model.Price.ToString("N2")</span>
                </div>
            </div>
            <div class="card-actions mt-3">
                <button class="btn btn-outline-primary btn-sm me-2 view-details-btn" data-product-id="@Model.Id">
                    <i class="fas fa-eye me-1"></i>View Details
                </button>
                @if (Model.InStock)
                {
                    <button class="btn btn-primary btn-sm add-to-cart-btn" data-product-id="@Model.Id">
                        <i class="fas fa-cart-plus me-1"></i>Add to Cart
                    </button>
                }
                else
                {
                    <button class="btn btn-secondary btn-sm" disabled>
                        <i class="fas fa-times me-1"></i>Out of Stock
                    </button>
                }
            </div>
        </div>
    </div>
</div>