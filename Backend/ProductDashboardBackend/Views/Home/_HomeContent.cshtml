@model ProductDashboard.Models.ViewModels.ProductListViewModel

<style>
    .home-content-container .hero-section {
        background: linear-gradient(to right, #FDF6E3, #FFFFFF);
        border-radius: 12px;
    }

    .home-content-container .hero-title {
        font-family: 'Playfair Display', serif;
        color: #2C3E50;
    }

    .home-content-container .hero-subtitle {
        color: #7F8C8D;
    }

    .home-content-container .cta-button {
        background-color: #E67E22;
        border: none;
        color: #2C3E50;
    }

        .home-content-container .cta-button:hover {
            background-color: #D35400;
            color: #FFFFFF;
        }

    .home-content-container .section-title {
        font-family: 'Playfair Display', serif;
        color: #2C3E50;
    }

    .home-content-container .category-card {
        background-color: #ECF0F1;
        border: none;
    }

    .home-content-container .category-icon {
        font-size: 2rem;
        color: #E67E22;
    }

    .home-content-container .category-title {
        color: #2C3E50;
    }

    .home-content-container .view-items-button {
        background-color: #DAA520;
        color: #2C3E50;
        border: none;
    }

        .home-content-container .view-items-button:hover {
            background-color: #B8860B;
            color: #FFFFFF;
        }
</style>

<div class="home-content-container">
    <div class="hero-section text-center py-5">
        <div class="container">
            <h1 class="display-4 hero-title">
                Welcome to Golden Fork
            </h1>
            <p class="lead hero-subtitle">
                Discover delicious dishes and culinary experiences
            </p>
            <button class="btn mt-3 cta-button" onclick="loadProductsView()">
                <i class="ri-restaurant-line me-2"></i>Browse Our Menu
            </button>
        </div>
    </div>

    <div class="featured-categories mt-5">
        <h2 class="text-center mb-4 section-title">Popular Categories</h2>
        <div class="row">
            @if (Model?.Categories != null)
            {
                foreach (var category in Model.Categories.Take(3))
                {
                    <div class="col-md-4 mb-4">
                        <div class="card border-0 text-center category-card">
                            <div class="card-body">
                                <i class="ri-restaurant-line category-icon"></i>
                                <h5 class="card-title mt-2 category-title">@category.Name</h5>
                                <button class="btn btn-sm mt-2 view-items-button" onclick="loadProductsByCategory(@category.Id)">
                                    View Items
                                </button>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<script>
    function loadProductsByCategory(categoryId) {
        // Set the category filter
        $('#categoryFilter').val(categoryId);

        // Load products view with the category filter applied
        showLoading();
        $('#contentContainer').load('@Url.Action("ProductList", "Home")', {
            categoryId: categoryId
        }, function() {
            hideLoading();
            updateActiveNav('products');
            scrollToTop();
        });
    }
</script>